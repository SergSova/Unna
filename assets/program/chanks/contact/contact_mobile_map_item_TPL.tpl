<div class="office">
    <span class="marker-info">[[+coordLat]]&[[+coordLng]]&assets/images/contact-icon/marker-office[[+idx]].png&[[+title]]&amp;[[+address]]</span>
    <div>
        <h2>[[+title]]</h2>
    </div>
    <div>
        <p>[[+address]]</p>
    </div>
    <div class="worktime">
        <p>[[%sheduble? &namespace=`unna`]]:</p>
        <p>
            <span>[[%work_schedule? &namespace=`unna`]]: [[+work_schedule]]</span>
            <span>[[%weekend_schedule? &namespace=`unna`]]: [[+weekend_schedule]]</span>
        </p>
    </div>
    <div class="contact-info">
        <p><i class="icon-phone"></i> <a href="tel:+38[[+phone]]"></a>+38[[+phone]]</p>
        <p><i class="icon-mail"></i> <a href="mail:[[+email]]">[[+email]]</a></p>
    </div>
    <div class="buttons">
        <a href="#" class="green-button driving-direction">[[%shema_transfer?&namespace=`unna`]] <i class="icon-right-arrow"></i></a>
        <a href="#" class="green-button get-direction">[[%make_marshrut?&namespace=`unna`]] <i class="icon-right-arrow"></i></a>
    </div>
</div>
