<div class="article">
    <h4>[[+pagetitle]]</h4>
    <div class="text">
        <div class="short">
            [[+content:ellipsis=`200`]]
        </div>
        <div class="full">
            [[+content]]
        </div>
    </div>
    <div class="buttons">
        <div class="date">[[+action-date:strtotime:date=`%d.%m.%Y`]]</div>
        <div class="read-more"><span data-hide-text="[[%сollapse? &namespace=`unna`]]"
                                     data-show-text="[[%read? &namespace=`unna`]] [[%more? &namespace=`unna`]]">[[%read? &namespace=`unna`]] [[%more? &namespace=`unna`]]</span>
            <i class="icon-right-arrow-g"></i></div>
    </div>
</div>
