<div class="advan-content-wrap [[+_first:is=`1`:then=`active`]]">
	<div class="advan-annotation">
		<h3 class="annotation-head">[[+title]]</h3>
		<p class="annotation-text">[[+desc]]</p>
	</div>
	<div data-img="[[+idx]]" class="advan-img">
		<img src="[[+image:phpthumbof=`w=653&h=439&zc=1`]]" alt="[[+title]]">
	</div>
	<p class="advan-text">[[+text]]</p>
</div>