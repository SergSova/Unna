<div class="premise">
    <div>
        <div class="compass"></div>
        <div class="media">
            <img src="[[+premises-mobile-image]]"/>
        </div>
        <div class="info">
            <p class="title">[[+pagetitle]] [[%metr? &namespace=`unna`]]<sup>2</sup></p>
            <table class="apart_info">
                <tr class="active">
                    <td class="num">[[+level]]</td>
                    <td class="desc">
                        [[%floor? &namespace=`unna`]]
                    </td>
                </tr>
                <tr>
                    <td class="num">[[+bisnes-size]] <span>[[%metr? &namespace=`unna`]]<sup>2</sup></span></td>
                    <td class="desc">[[%area? &namespace=`unna`]]</td>
                </tr>
                <tr>
                    <td class="num">[[+bisnes-price]] <span>[[%uah]]/[[%metr? &namespace=`unna`]]<sup>2</sup></td>
                    <td class="desc">[[%price? &namespace=`unna`]] 1 [[%metr? &namespace=`unna`]]<sup>2</sup></td>
                </tr>
            </table>
            <a class="pdf_file" href="[[+bisnes-planirovka]]" target="_blank">
                [[%download? &namespace=`unna`]] [[%planirovku? &namespace=`unna`]]
            </a>
            <a class="show_more" href="#">[[%learn? &namespace=`unna`]] [[%more? &namespace=`unna`]]</a>
        </div>
    </div>
</div>